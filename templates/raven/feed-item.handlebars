<div class="pure-g">
    <div class="feed-content">
        <div class="feed-content-header pure-g">
            <div class="pure-u-2-3">
                <h1 class="feed-content-title">{{item.title}}</h1>
                <p class="feed-content-subtitle">
                    From <a href="">{{item.feed_title}}</a>
                </p>
            </div>

            <div class="pure-u-1-3 feed-content-meta">
                {{formatDate item.published}}
            </div>
        </div>

        <div class="feed-content-body pure-u-1">
            {{{item.description}}}
        </div>

        <div class="feed-content-footer pure-u-1">
            <a class="pure-button secondary-button">Star</a>
            <a class="pure-button secondary-button">Share</a>
            <a class="pure-button secondary-button">Read later</a>
        </div>
    </div>
</div>


