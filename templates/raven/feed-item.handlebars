<div class="feeditem-content">
    <div class="feeditem-content-header pure-g">
        <div class="pure-u-2-3">
            <h1 class="feeditem-content-title">{{item.title}}</h1>
            <p class="feeditem-content-subtitle">
                From <a href="">{{item.feed_title}}</a>
            </p>
        </div>

        <div class="pure-u-1-3 feeditem-content-meta">
            {{formatDate item.published}}
        </div>
    </div>

    <div class="feeditem-content-body pure-u-1">
        {{{item.description}}}
    </div>

    <div class="feeditem-content-footer pure-u-1">
        <a class="pure-button secondary-button">Star</a>
        <a class="pure-button secondary-button">Share</a>
        <a class="pure-button secondary-button">Read later</a>
    </div>
</div>
