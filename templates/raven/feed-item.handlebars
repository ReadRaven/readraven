<div class="feeditem-content">
    <div class="feeditem-content-header pure-g">
        <div class="pure-u-2-3">
            <h1 class="feeditem-content-title">
                <a href="{{item.link}}" target="blank">{{item.title}}</a>
            </h1>
            <p class="feeditem-content-subtitle">
                From <a href="#/feed/{{item.feed_id}}">{{item.feed_title}}</a>
            </p>
        </div>

        <div class="pure-u-1-3 feeditem-content-meta">
            {{formatDate item.published}}
        </div>
    </div>

    <div class="feeditem-content-body pure-u-1">
        {{{item.description}}}
    </div>

    <div class="feeditem-content-footer pure-g">
        <div class="feeditem-meta pure-u-1-3">
        {{#each item.feed_tags}}
            <a href="#/tag/{{this}}">{{this}}</a>
        {{/each}}
        </div>
        <div class="feeditem-content-controls pure-u-2-3">
        {{#if item.starred}}
            <a class="pure-button secondary-button star">Un-star</a>
        {{else}}
            <a class="pure-button secondary-button star">Star</a>
        {{/if}}
        </div>
    </div>
</div>
